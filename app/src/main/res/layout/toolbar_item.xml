<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    >

    <TextView
        android:id="@+id/tv_center"
        style="@style/toolbar_text_style"
        android:layout_alignBaseline="@+id/tv_left"
        android:layout_alignBottom="@+id/tv_left" />

    <TextView
        android:id="@+id/tv_left_right"
        style="@style/toolbar_text_style"
        android:paddingRight="16dp"
        android:layout_alignBaseline="@+id/tv_center"
        android:layout_alignBottom="@+id/tv_center"
        android:layout_toLeftOf="@+id/tv_right"
        android:layout_toStartOf="@+id/tv_right" />

    <TextView
        android:id="@+id/tv_right"
        style="@style/toolbar_text_style"
        android:paddingRight="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignBaseline="@+id/tv_left_right"
        android:layout_alignBottom="@+id/tv_left_right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_left"
        style="@style/toolbar_text_style"
        android:paddingLeft="16dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>